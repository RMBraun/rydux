{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "types.d.ts",
    "index.ts",
    "client.ts",
    "server.tsx",
    "SerializeSliceToClient.tsx",
    "global-store.ts",
    "event-emitter.ts",
    "constants.ts",
    "utils.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "test.ts"
  ]
}