{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
  },
  "include": [
    "src/react-context.tsx",
    "src/index.ts",
    "src/client.ts",
    "src/server.tsx",
    "src/SerializeSliceToClient.tsx",
    "src/utils.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}