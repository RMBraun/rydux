{
  "name": "@rybr/rydux",
  "version": "2.0.3",
  "description": "Simple flux framework for JavaScript, React, NextJs, TanStack Start, and NodeJs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js"
    }
  },
  "type": "module",
  "files": [
    "./dist"
  ],
  "scripts": {
    "tests": "tsx ./tests/unit-tests/global.tests.ts",
    "format": "prettier --write .",
    "build": "rm -rf ./dist && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RMBraun/rydux.git"
  },
  "keywords": [
    "flux",
    "redux",
    "reducer",
    "context",
    "React",
    "NodeJs",
    "NextJs",
    "TanStack"
  ],
  "author": "Ryan Braun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RMBraun/rydux/issues"
  },
  "homepage": "https://github.com/RMBraun/rydux#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "server-only": "^0.0.1",
    "eventemitter3": "5.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.5",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3"
  }
}
